empno=int(input('Enter employee number'))
empname=input('Enter employee name')
empdesig=input('Enter employee designation')
basicsalary=int(input('Enter employee basic salary'))
da=int(input('Enter day allowance'))
ta=int(input('Enter travel allowance'))
hra=int(input('Enter house rental allowance'))
netsalary=basicsalary+da+ta+hra
if netsalary>100000:
    tax=(netsalary*10)/100
    print('tax:',tax)
if  netsalary>50000:
    tax=(netsalary*7)/100
    print('tax:',tax)  
if  netsalary>40000:
    tax=(netsalary*4)/100
    print('tax:',tax)  
if  netsalary>20000:
    tax=(netsalary*2)/100
    print('tax:',tax)   
if  netsalary<20000:
    print('tax=0',tax) 
