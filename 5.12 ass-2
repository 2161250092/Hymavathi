n=int(input('enter how many numbers you want'))
num=int(input('enter any number'))
largest=num
smallest=num
i=1
while i<n:
    num=int(input('enter any number'))
    if num>largest:
        largest=num
        i=i+1
    elif(num<smallest):
        smallest=num
        i=i+1
print('the difference between largest and smallest',largest-smallest)        
